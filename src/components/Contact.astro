<style>
    h1 {
        margin: 0;
        padding: 0;
    }

    .contact {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        list-style: none;
        padding: 0;
    }

    li {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        margin-bottom: 15px;
    }

    .title {
        font-size: clamp(25px, 10vw, 60px); /* Ajustable */
        line-height: 1;
        margin-bottom: 20px;
    }

    .mail, .git, .linkedin {
        font-size: clamp(30px, 15vw, 100px); /* Ajustable */
        line-height: 1.1;
    }

    a {
        color: black;
        text-decoration: none;
    }

    a:hover {
        color: #333;
    }

    /* Tablets */
    @media (max-width: 1024px) {
        .title {
            font-size: 50px;
        }

        .mail, .git, .linkedin {
            font-size: 80px;
        }
    }

    /* Móviles (hasta 768px) */
    @media (max-width: 768px) {
        .title {
            font-size: 40px;
        }

        .git, .linkedin {
            font-size: 60px;
        }


        .mail {
            font-size: 40px;
        }
    }

    /* Móviles pequeños (hasta 480px) */
    @media (max-width: 480px) {
        .title {
            font-size: 30px;
        }

        .git, .linkedin {
            font-size: 50px;
        }

        .mail {
            font-size: 35px;
        }
    }
</style>


